<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_margin="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_lay"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Name"
            />

        <EditText
            android:id="@+id/mem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_gravity="center_horizontal"
            android:maxLength="10"
            android:ems="10"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/name_lay"
    android:id="@+id/contact_lay"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/text_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
 />


    <EditText
        android:id="@+id/mem_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="10"
        android:ems="10"
        android:inputType="phone" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_lay"
        android:id="@+id/address_lay"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address" />
        <EditText
            android:id="@+id/mem_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:ems="10"
            android:inputType="textPostalAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_lay"
        android:id="@+id/milan_lay"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/text_milan"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Milan"
   />
        <Spinner
            android:id="@+id/mem_milan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/milan_lay"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_khanda"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Khanda"
 />

        <Spinner
            android:id="@+id/mem_khanda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
         />

    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="16dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/details_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="1"
        android:text="Save" />

    <Button
        android:id="@+id/details_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:text="Reset"
        android:layout_weight="1"
 />
</LinearLayout>
    </RelativeLayout>

