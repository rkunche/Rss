<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tracker.student.ketto.Mem_Reports">

    <TextView
        android:id="@+id/Text_Khanda"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:text="Khanda"
        app:layout_constraintRight_toLeftOf="@+id/spinner_Khanda"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_Khanda"
        android:layout_marginEnd="38dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_Khanda"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="38dp" />

    <Spinner
        android:id="@+id/spinner_Khanda"
        android:layout_width="194dp"
        android:layout_height="32dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="17dp" />

    <TextView
        android:id="@+id/Text_Milan"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="Milan"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/Text_Khanda"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/Text_Khanda"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Text_Khanda" />

    <Spinner
        android:id="@+id/spinner_Milan"
        android:layout_width="0dp"
        android:layout_height="32dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/spinner_Khanda"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Khanda"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/spinner_Khanda" />




    <RadioGroup
        android:id="@+id/radio_MKGroup"
        android:layout_width="187dp"
        android:layout_height="0dp"
        android:layout_marginEnd="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="21dp"
        android:weightSum="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Milan"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <RadioButton
            android:id="@+id/radio_Monthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:text="Monthly"
            app:layout_constraintLeft_toLeftOf="@+id/radio_MKGroup"
            app:layout_constraintTop_toTopOf="@+id/radio_MKGroup"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <RadioButton
            android:id="@+id/radio_Weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Weekly"
            app:layout_constraintLeft_toLeftOf="@+id/spinner_Milan"
            app:layout_constraintTop_toTopOf="@+id/radio_MKGroup"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"
            android:layout_weight="0.17" />

    </RadioGroup>

    <ListView
        android:layout_width="0dp"
        android:layout_height="261dp"
        android:layout_marginTop="235dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:id="@+id/listView" />

    <Button
        android:id="@+id/get_Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Report"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="8dp" />


</android.support.constraint.ConstraintLayout>
